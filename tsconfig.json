{
    "compilerOptions": {
        "module": "es2015",
        "target": "es5",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "sourceMap": true,
        "removeComments": false,
        "moduleResolution": "node",
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es2015",
            "dom",
            "esnext"
        ],
        "types": [
            "jest"
        ],
        "paths": {
            "@agm/*": ["./packages/*"]
        }
    }
}
